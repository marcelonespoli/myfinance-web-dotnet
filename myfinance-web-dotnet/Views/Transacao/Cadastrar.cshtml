@model myfinance_web_dotnet.Models.TransacaoModel;

@{
    ViewData["Title"] = "Registrar Transação Financeira";
}

<h1>@ViewData["Title"]</h1>

@* @Html.ValidationSummary(false, "", new { @class = "text-danger" }) *@


    <form asp-controller="Transacao" asp-action="Cadastrar" method="post">
        <input type="hidden" asp-for="Id" /><br>

        <div class="form-group">
          <label>Data:</label>
          <input type="date" asp-for="Data" class="form-control" />
          @Html.ValidationMessage("Data")
        </div>
        
        <div class="form-group">
          <label>Valor:</label>
          <input type="text" asp-for="Valor" class="form-control" />
          @Html.ValidationMessage("Valor")
        </div>

        <div class="form-group">
          <label>Plano de Conta:</label>
          @Html.DropDownListFor(m => m.PlanoContaId, Model.PlanoContas, new { @class="form-select" })
          @Html.ValidationMessage("PlanoContaId")
        </div>

        <div class="form-group">
          <label>Histórico:</label>
          <input type="text" asp-for="Historico" class="form-control" />
          @Html.ValidationMessage("Historico")
        </div>

        <br><br>
        <button type="submit" class="btn btn-block btn-success">Registrar</button>
    </form>
</div>
